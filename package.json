{
	"name": "auth24-better-auth",
	"version": "1.0.0",
	"description": "Authentication provider using Fastify, BetterAuth, and Drizzle ORM with PostgreSQL",
	"main": "dist/src/server.js",
	"type": "module",
	"scripts": {
		"dev": "nodemon --watch --exec node dist/src/server.js",
		"build": "npx swc src -d dist --config-file .swcrc",
		"watch": "swc src -d dist --config-file .swcrc --watch",
		"start": "node dist/src/server.js",
		"app:typecheck": "tsc --noEmit",
		"app:prepare": "pnpm biome check --write",
		"migrations:generate": "pnpm drizzle-kit generate",
		"migrations:apply": "pnpm drizzle-kit migrate --config ./drizzle.config.ts",
		"auth:generate": "pnpm dlx @better-auth/cli generate --output ./src/db/schemas/auth.schema.ts --config ./src/lib/auth.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.11.0",
	"dependencies": {
		"@fastify/cors": "^11.1.0",
		"better-auth": "^1.3.9",
		"dotenv": "^17.2.2",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.5",
		"fastify": "^5.6.0",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@swc/cli": "^0.7.8",
		"@swc/core": "^1.13.5",
		"@swc/plugin-transform-imports": "^9.1.0",
		"@types/node": "^24.3.3",
		"@types/pg": "^8.15.5",
		"nodemon": "^3.1.10",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2"
	}
}
