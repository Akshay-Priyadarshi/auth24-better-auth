{
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "es2022",
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"outDir": "dist",
		"lib": ["esnext"],
		"types": ["node"]
	},
	"include": ["src/**/*.ts", "bin/*.ts"],
	"exclude": ["node_modules"]
}
